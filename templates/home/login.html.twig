<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesi√≥n</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-md-5 col-lg-4">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <div class="mb-3">
                                <span class="fs-1">üîê</span>
                            </div>
                            <h1 class="h3 fw-bold mb-2">Iniciar Sesi√≥n</h1>
                            <p class="text-muted small">Ingresa tus credenciales para acceder</p>
                        </div>

                        {% if error is defined %}
                        <div class="alert alert-danger" id="error-message">
                            {{ error }}
                        </div>
                        {% endif %}

                        <div id="success-message" class="alert alert-success" style="display: none;"></div>
                        <div id="error-api-message" class="alert alert-danger" style="display: none;"></div>

                        <form id="login-form">
                            <div class="mb-3">
                                <label for="correo" class="form-label fw-semibold">Correo electr√≥nico</label>
                                <input type="email" class="form-control form-control-lg" id="correo" name="correo" placeholder="tu@email.com" required>
                            </div>

                            <div class="mb-4">
                                <label for="password" class="form-label fw-semibold">Contrase√±a</label>
                                <input type="password" class="form-control form-control-lg" id="password" name="password" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" required>
                            </div>

                            <button type="submit" class="btn btn-primary btn-lg w-100 py-2" id="login-btn">
                                Iniciar Sesi√≥n
                            </button>

                            <div class="text-center mt-3 text-primary" id="loading" style="display: none;">
                                <div class="spinner-border spinner-border-sm me-2" role="status">
                                    <span class="visually-hidden">Cargando...</span>
                                </div>
                                Autenticando...
                            </div>
                        </form>

                        <div class="text-center my-4">
                            <small class="text-muted">o</small>
                        </div>

                        <div class="text-center">
                            <p class="text-muted mb-2 small">¬øNo tienes cuenta?</p>
                            <a href="#" class="btn btn-outline-primary btn-lg w-100" id="register-link">Crear cuenta nueva</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const loginForm = document.getElementById('login-form');
        const loginBtn = document.getElementById('login-btn');
        const loading = document.getElementById('loading');
        const errorMessage = document.getElementById('error-api-message');
        const successMessage = document.getElementById('success-message');
        const registerLink = document.getElementById('register-link');

        // Obtener la URL base (funciona tanto en dev como en XAMPP)
        const baseUrl = window.location.origin + window.location.pathname.replace(/login$/, '').replace(/\/$/, '');

        // Manejar el env√≠o del formulario de login
        loginForm.addEventListener('submit', async (e) => {
            e.preventDefault();

            const correo = document.getElementById('correo').value;
            const password = document.getElementById('password').value;

            // Deshabilitar bot√≥n y mostrar loading
            loginBtn.disabled = true;
            loading.style.display = 'block';
            errorMessage.style.display = 'none';
            successMessage.style.display = 'none';

            // Obtener ubicaci√≥n
            let ubicacion = null;
            try {
                ubicacion = await obtenerUbicacion();
            } catch (error) {
                console.warn('No se pudo obtener ubicaci√≥n:', error);
            }

            try {
                const loginData = { correo, password };
                if (ubicacion) {
                    loginData.latitud = ubicacion.latitude;
                    loginData.longitud = ubicacion.longitude;
                }

                const response = await fetch(baseUrl + '/api/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(loginData)
                });

                const data = await response.json();

                if (response.ok && data.success) {
                    // Guardar token en localStorage
                    localStorage.setItem('auth_token', data.token);
                    localStorage.setItem('user', JSON.stringify(data.user));

                    successMessage.textContent = '¬°Login exitoso! Redirigiendo...';
                    successMessage.style.display = 'block';

                    // Redirigir al home
                    setTimeout(() => {
                        window.location.href = baseUrl + '/home';
                    }, 1000);
                } else {
                    errorMessage.textContent = data.error || 'Error al iniciar sesi√≥n';
                    errorMessage.style.display = 'block';
                    loginBtn.disabled = false;
                    loading.style.display = 'none';
                }
            } catch (error) {
                errorMessage.textContent = 'Error de conexi√≥n. Intenta nuevamente.';
                errorMessage.style.display = 'block';
                loginBtn.disabled = false;
                loading.style.display = 'none';
            }
        });

        // Funci√≥n para obtener ubicaci√≥n
        function obtenerUbicacion() {
            return new Promise((resolve, reject) => {
                if (!navigator.geolocation) {
                    reject(new Error('Geolocalizaci√≥n no soportada'));
                    return;
                }
                navigator.geolocation.getCurrentPosition(
                    (position) => resolve({
                        latitude: position.coords.latitude,
                        longitude: position.coords.longitude
                    }),
                    (error) => reject(error),
                    { enableHighAccuracy: true, timeout: 5000, maximumAge: 0 }
                );
            });
        }

        // Ir a registro (puedes crear una p√°gina similar para register)
        registerLink.addEventListener('click', (e) => {
            e.preventDefault();
            showRegisterForm();
        });

        function showRegisterForm() {
            // Cambiar el formulario a registro
            document.querySelector('.text-center.mb-4 h1').innerHTML = 'üìù Crear Cuenta';
            document.querySelector('.text-center.mb-4 p').textContent = 'Reg√≠strate para comenzar';

            const form = document.getElementById('login-form');
            form.innerHTML = `
                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre completo</label>
                    <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Tu nombre" required>
                </div>
                <div class="mb-3">
                    <label for="correo" class="form-label">Correo electr√≥nico</label>
                    <input type="email" class="form-control" id="correo" name="correo" placeholder="tu@email.com" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Contrase√±a</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" required>
                </div>
                <button type="submit" class="btn btn-primary w-100 py-2" id="register-btn">
                    Crear Cuenta
                </button>
                <div class="text-center mt-3 text-primary" id="loading" style="display: none;">
                    <div class="spinner-border spinner-border-sm me-2" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    Registrando...
                </div>
            `;

            const bottomText = document.querySelector('.text-center p.text-muted.mb-2');
            if (bottomText) {
                bottomText.textContent = '¬øYa tienes cuenta?';
            }
            registerLink.textContent = 'Inicia sesi√≥n aqu√≠';
            registerLink.className = 'btn btn-outline-secondary w-100';
            registerLink.onclick = (e) => {
                e.preventDefault();
                window.location.reload();
            };

            // Manejar el env√≠o del formulario de registro
            form.addEventListener('submit', async (e) => {
                e.preventDefault();

                const nombre = document.getElementById('nombre').value;
                const correo = document.getElementById('correo').value;
                const password = document.getElementById('password').value;

                const btn = document.getElementById('register-btn');
                const loading = document.getElementById('loading');

                btn.disabled = true;
                loading.style.display = 'block';
                errorMessage.style.display = 'none';
                successMessage.style.display = 'none';

                try {
                    const response = await fetch(baseUrl + '/api/register', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ nombre, correo, password })
                    });

                    const data = await response.json();

                    if (response.ok && data.success) {
                        successMessage.textContent = '¬°Registro exitoso! Ahora puedes iniciar sesi√≥n.';
                        successMessage.style.display = 'block';

                        setTimeout(() => {
                            window.location.reload();
                        }, 2000);
                    } else {
                        errorMessage.textContent = data.error || 'Error al registrar';
                        errorMessage.style.display = 'block';
                        btn.disabled = false;
                        loading.style.display = 'none';
                    }
                } catch (error) {
                    errorMessage.textContent = 'Error de conexi√≥n. Intenta nuevamente.';
                    errorMessage.style.display = 'block';
                    btn.disabled = false;
                    loading.style.display = 'none';
                }
            });
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
