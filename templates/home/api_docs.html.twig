<script>
    // Configuración de la URL base de la API
    // Obtener la URL base correcta desde el servidor usando Twig
    const API_BASE_URL = '{{ app.request.schemeAndHttpHost ~ app.request.baseUrl }}';

    console.log('API Base URL detectada:', API_BASE_URL);

    // Smooth scroll para los enlaces de navegación
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });

    // Mostrar/ocultar botón de volver arriba
    const backToTop = document.querySelector('.back-to-top');
    window.addEventListener('scroll', () => {
        if (window.pageYOffset > 300) {
            backToTop.style.display = 'flex';
        } else {
            backToTop.style.display = 'none';
        }
    });

    // Función para mostrar/ocultar sección de testing
    function toggleTestSection(endpointId) {
        const testSection = document.getElementById('test-' + endpointId);
        testSection.classList.toggle('active');
    }

    // Función para probar endpoint
    async function testEndpoint(endpointId, method, url) {
        const testSection = document.getElementById('test-' + endpointId);
        const executeButton = testSection.querySelector('.execute-button');
        const outputDiv = testSection.querySelector('.test-output');

        // Obtener token del localStorage
        const token = localStorage.getItem('api_token');

        executeButton.disabled = true;
        executeButton.textContent = 'Ejecutando...';

        try {
            // Construir datos de request
            let requestData = {};
            const inputs = testSection.querySelectorAll('.test-input');

            inputs.forEach(input => {
                const value = input.value.trim();
                const name = input.name;

                if (value && name) {
                    // Manejar casos especiales
                    if (name === 'usuario_id' && value.includes(',')) {
                        // Convertir lista separada por comas a array de números
                        requestData[name] = value.split(',').map(id => parseInt(id.trim())).filter(id => !isNaN(id));
                    } else if (input.type === 'number') {
                        // Convertir a número si es un campo numérico y tiene valor
                        const num = parseFloat(value);
                        if (!isNaN(num)) {
                            requestData[name] = num;
                        }
                    } else if (input.type === 'password' || input.type === 'email' || input.type === 'text' || input.tagName === 'TEXTAREA') {
                        // Agregar como string
                        requestData[name] = value;
                    } else {
                        // Por defecto, agregar el valor como está
                        requestData[name] = value;
                    }
                }
            });

            // Configurar request
            const config = {
                method: method,
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                }
            };

            // Agregar token si existe
            if (token) {
                config.headers['Authorization'] = 'Bearer ' + token;
            }

            // Agregar body para métodos que lo requieren
            if (method !== 'GET' && Object.keys(requestData).length > 0) {
                config.body = JSON.stringify(requestData);
            } else if (method === 'DELETE' && Object.keys(requestData).length > 0) {
                config.body = JSON.stringify(requestData);
            }

            // Construir URL completa
            const fullUrl = API_BASE_URL + url;

            // Mostrar URL que se está llamando (para debugging)
            console.log('Llamando a:', fullUrl);
            console.log('Método:', method);
            console.log('Datos:', requestData);

            // Ejecutar request
            const response = await fetch(fullUrl, config);

            // Verificar el content-type de la respuesta
            const contentType = response.headers.get('content-type');
            let responseData;

            if (contentType && contentType.includes('application/json')) {
                responseData = await response.json();
            } else {
                // Si no es JSON, probablemente es una página de error HTML de Symfony
                const textResponse = await response.text();

                // Intentar extraer el mensaje de error del título HTML
                const titleMatch = textResponse.match(/<title>(.*?)<\/title>/);
                const errorMessage = titleMatch ? titleMatch[1] : 'Error desconocido';

                // Crear un objeto de respuesta simulado para mostrar el error de forma consistente
                responseData = {
                    success: false,
                    error: errorMessage,
                    details: `Status: ${response.status} ${response.statusText}`,
                    raw_response: textResponse.substring(0, 200) + '...'
                };
            }

            // Mostrar resultado
            const result = {
                url: fullUrl,
                status: response.status,
                statusText: response.statusText,
                headers: Object.fromEntries(response.headers),
                data: responseData
            };

            outputDiv.textContent = JSON.stringify(result, null, 2);
            outputDiv.style.color = response.ok ? '#a9dc76' : '#ff6b6b';

            // Si es login exitoso, guardar el token automáticamente
            if (endpointId === 'login' && response.ok && responseData.token) {
                localStorage.setItem('api_token', responseData.token);
                updateTokenStatus();
                outputDiv.textContent += '\n\n✅ Token guardado automáticamente';
            }

        } catch (error) {
            outputDiv.textContent = 'Error: ' + error.message;
            outputDiv.style.color = '#ff6b6b';
        } finally {
            executeButton.disabled = false;
            executeButton.textContent = '🚀 Ejecutar';
        }
    }

    // Función para configurar token
    function setApiToken() {
        const token = prompt('Introduce tu token de API (Bearer):');
        if (token) {
            localStorage.setItem('api_token', token);
            alert('Token configurado correctamente');
            updateTokenStatus();
        }
    }

    // Función para limpiar token
    function clearApiToken() {
        localStorage.removeItem('api_token');
        alert('Token eliminado');
        updateTokenStatus();
    }

    // Función para actualizar estado del token
    function updateTokenStatus() {
        const token = localStorage.getItem('api_token');
        const statusElement = document.getElementById('token-status');
        if (token) {
            statusElement.innerHTML = '🟢 Token configurado <button onclick="clearApiToken()" style="margin-left: 10px; padding: 2px 8px; border: none; border-radius: 3px; background: #ff4757; color: white; cursor: pointer;">Limpiar</button>';
        } else {
            statusElement.innerHTML = '🔴 Token no configurado <button onclick="setApiToken()" style="margin-left: 10px; padding: 2px 8px; border: none; border-radius: 3px; background: #007bff; color: white; cursor: pointer;">Configurar</button>';
        }
    }

    // Función para actualizar el display de la URL base
    function updateApiBaseUrl() {
        const displayElement = document.getElementById('api-base-url-display');
        if (displayElement) {
            displayElement.textContent = API_BASE_URL;
        }
    }

    // Inicializar
    document.addEventListener('DOMContentLoaded', function() {
        updateTokenStatus();
        updateApiBaseUrl();
    });
</script>
