{% extends 'base.html.twig' %}

{% block title %}Documentación API - Sistema de Usuarios{% endblock %}

{% block stylesheets %}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 40px 20px;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 50px rgba(0, 0, 0, 0.3);
        overflow: hidden;
    }

    .header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 40px;
        text-align: center;
        position: relative;
    }

    .btn-back {
        position: absolute;
        top: 20px;
        left: 20px;
        background: rgba(255, 255, 255, 0.2);
        color: white;
        border: 2px solid white;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-size: 1rem;
        font-weight: 600;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-back:hover {
        background: white;
        color: #667eea;
        transform: translateX(-5px);
    }

    .btn-back::before {
        content: '←';
        font-size: 1.3rem;
    }

    .header h1 {
        font-size: 2.5rem;
        margin-bottom: 10px;
        font-weight: 700;
    }

    .header p {
        font-size: 1.1rem;
        opacity: 0.95;
        margin-bottom: 15px;
    }

    #token-status {
        background: rgba(255, 255, 255, 0.1);
        padding: 10px 20px;
        border-radius: 8px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        display: inline-block;
        font-size: 0.95rem;
        font-weight: 500;
    }

    .content {
        padding: 40px;
    }

    .nav-menu {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 40px;
        position: sticky;
        top: 20px;
        z-index: 100;
    }

    .nav-menu h3 {
        color: #2c3e50;
        margin-bottom: 15px;
        font-size: 1.2rem;
    }

    .nav-links {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 10px;
    }

    .nav-links a {
        color: #667eea;
        text-decoration: none;
        padding: 8px 12px;
        border-radius: 5px;
        transition: all 0.3s;
        font-size: 0.9rem;
        display: block;
    }

    .nav-links a:hover {
        background: #667eea;
        color: white;
    }

    .section {
        margin-bottom: 50px;
        scroll-margin-top: 100px;
    }

    .section-title {
        color: #2c3e50;
        font-size: 2rem;
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 3px solid #667eea;
    }

    .endpoint {
        background: #fff;
        border: 2px solid #e9ecef;
        border-radius: 10px;
        padding: 25px;
        margin-bottom: 30px;
        transition: all 0.3s;
    }

    .endpoint:hover {
        border-color: #667eea;
        box-shadow: 0 5px 20px rgba(102, 126, 234, 0.2);
    }

    .endpoint-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 20px;
        flex-wrap: wrap;
    }

    .method {
        padding: 8px 16px;
        border-radius: 6px;
        font-weight: bold;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .method-get {
        background: #28a745;
        color: white;
    }

    .method-post {
        background: #007bff;
        color: white;
    }

    .method-delete {
        background: #dc3545;
        color: white;
    }

    .endpoint-path {
        font-family: 'Courier New', monospace;
        font-size: 1.1rem;
        color: #2c3e50;
        font-weight: bold;
        flex: 1;
    }

    .access-badge {
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .access-public {
        background: #d4edda;
        color: #155724;
    }

    .access-protected {
        background: #fff3cd;
        color: #856404;
    }

    .endpoint-description {
        color: #6c757d;
        margin-bottom: 20px;
        line-height: 1.6;
        font-size: 1rem;
    }

    .subsection {
        margin-bottom: 20px;
    }

    .subsection-title {
        color: #495057;
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .subsection-title::before {
        content: 'â–¸';
        color: #667eea;
        font-weight: bold;
    }

    .code-block {
        background: #2d2d2d;
        color: #f8f8f2;
        padding: 20px;
        border-radius: 8px;
        overflow-x: auto;
        font-family: 'Courier New', monospace;
        font-size: 0.9rem;
        line-height: 1.5;
        position: relative;
    }

    .code-block::before {
        content: 'JSON';
        position: absolute;
        top: 5px;
        right: 10px;
        background: #667eea;
        color: white;
        padding: 2px 8px;
        border-radius: 4px;
        font-size: 0.7rem;
        font-weight: bold;
    }

    .code-block pre {
        margin: 0;
    }

    .error-list {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        border-left: 4px solid #dc3545;
    }

    .error-item {
        margin-bottom: 10px;
        padding: 8px;
        background: white;
        border-radius: 5px;
    }

    .error-code {
        display: inline-block;
        background: #dc3545;
        color: white;
        padding: 3px 8px;
        border-radius: 4px;
        font-weight: bold;
        font-size: 0.85rem;
        margin-right: 8px;
    }

    .back-to-top {
        position: fixed;
        bottom: 30px;
        right: 30px;
        background: #667eea;
        color: white;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
        transition: all 0.3s;
        text-decoration: none;
        font-size: 1.5rem;
    }

    .back-to-top:hover {
        background: #764ba2;
        transform: translateY(-5px);
    }

    .info-box {
        background: #e7f3ff;
        border-left: 4px solid #007bff;
        padding: 15px;
        border-radius: 8px;
        margin: 20px 0;
    }

    .info-box-title {
        font-weight: bold;
        color: #007bff;
        margin-bottom: 8px;
    }

    .test-button {
        background: #28a745;
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 0.9rem;
        margin-left: 10px;
        transition: background 0.3s;
    }

    .test-button:hover {
        background: #218838;
    }

    .test-section {
        margin-top: 20px;
        border: 2px solid #28a745;
        border-radius: 8px;
        padding: 20px;
        background: #f8fff9;
        display: none;
    }

    .test-section.active {
        display: block;
    }

    .test-input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ced4da;
        border-radius: 5px;
        margin-bottom: 10px;
        font-family: 'Courier New', monospace;
        font-size: 14px;
    }

    .test-output {
        background: #2d2d2d;
        color: #f8f8f2;
        padding: 15px;
        border-radius: 5px;
        font-family: 'Courier New', monospace;
        font-size: 0.9rem;
        white-space: pre-wrap;
        margin-top: 10px;
        max-height: 400px;
        overflow-y: auto;
    }

    .execute-button {
        background: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1rem;
        font-weight: bold;
    }

    .execute-button:hover {
        background: #0056b3;
    }

    .execute-button:disabled {
        background: #6c757d;
        cursor: not-allowed;
    }

    @media (max-width: 768px) {
        .header h1 {
            font-size: 1.8rem;
        }

        .endpoint-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .nav-links {
            grid-template-columns: 1fr;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="header">
        <a href="{{ path('app_home') }}" class="btn-back">Inicio</a>
        <h1>📚 Documentación de la API</h1>
        <p>Sistema de Usuarios y Mensajería - Todos los Endpoints</p>
        <div id="token-status">
            🔴 Token no configurado
        </div>
    </div>

    <div class="content">
        <!-- Información de configuración -->
        <div style="background: #e7f3ff; border: 2px solid #007bff; border-radius: 10px; padding: 15px; margin-bottom: 20px;">
            <h4 style="color: #004085; margin-bottom: 10px;">⚙️ Configuración de la API</h4>
            <p style="color: #004085; margin: 0;">
                <strong>URL Base detectada:</strong> <code id="api-base-url-display" style="background: #fff; padding: 3px 8px; border-radius: 3px;">Cargando...</code>
            </p>
        </div>

        <!-- Información sobre testing -->
        <div style="background: #e8f5e8; border: 2px solid #28a745; border-radius: 10px; padding: 20px; margin-bottom: 30px;">
            <h3 style="color: #155724; margin-bottom: 15px;">🧪 Testing de Endpoints</h3>
            <p style="color: #155724; margin-bottom: 15px;">
                Esta documentación incluye funcionalidad para **probar endpoints directamente** desde aquí:
            </p>
            <ul style="color: #155724; margin-left: 20px;">
                <li>🔴/🟢 **Estado del token**: Indica si tienes un token configurado</li>
                <li>🧪 **Botones "Probar endpoint"**: Abren una sección de testing</li>
                <li>📝 **Formularios de entrada**: Para introducir datos JSON</li>
                <li>🚀 **Botón "Ejecutar"**: Envía la petición real a la API</li>
            </ul>
            <p style="color: #155724; margin-top: 15px;">
                💡 **Tip**: Haz login primero para obtener un token y poder probar endpoints protegidos.
            </p>
        </div>

        <!-- Navegación rápida -->
        <div class="nav-menu">
            <h3>📚 Navegación Rápida</h3>
            <div class="nav-links">
                <a href="#autenticacion">🔐 Autenticación</a>
                <a href="#usuarios">👥 Usuarios</a>
                <a href="#chat-general">💬 Chat General</a>
                <a href="#privado">🔒 Chats Privados</a>
                <a href="#invitaciones">📧 Invitaciones</a>
                <a href="#mensajes">📝 Gestión de Mensajes</a>
            </div>
        </div>

        <div class="info-box">
            <div class="info-box-title">🔑 Autenticación con Token Bearer</div>
            <p>Los endpoints protegidos requieren enviar el token en el header:</p>
            <code style="background: #f8f9fa; padding: 5px 10px; border-radius: 4px; display: inline-block; margin-top: 5px;">
                Authorization: Bearer {tu_token_aqui}
            </code>
        </div>

        <!-- SECCIÃ“N: AUTENTICACIÃ“N -->
        <section id="autenticacion" class="section">
            <h2 class="section-title">Autenticación</h2>

            <!-- POST /api/register -->
            <div class="endpoint">
                <div class="endpoint-header">
                    <span class="method method-post">POST</span>
                    <span class="endpoint-path">/api/register</span>
                    <span class="access-badge access-public">Público</span>
                    <button class="test-button" onclick="toggleTestSection('register')">🧪 Probar endpoint</button>
                </div>
                <div class="endpoint-description">
                    Registra un nuevo usuario en el sistema. El usuario queda activo automáticamente tras el registro.
                </div>

                <div class="subsection">
                    <div class="subsection-title">Parámetros de entrada</div>
                    <div class="code-block">
<pre>{
  "nombre": "Juan Pérez",
  "correo": "juan@example.com",
  "password": "123456",
  "latitud": 40.4168,  <span style="color: #75715e;">// opcional</span>
  "longitud": -3.7038  <span style="color: #75715e;">// opcional</span>
}</pre>
                    </div>
                </div>

                <div class="subsection">
                    <div class="subsection-title">Respuesta exitosa (201)</div>
                    <div class="code-block">
<pre>{
  "success": true,
  "message": "Usuario registrado exitosamente",
  "data": {
    "token": 1,
    "user": {
      "nombre": "Juan Pérez",
      "correo": "juan@example.com"
    }
  }
}</pre>
                    </div>
                </div>

                <div class="subsection">
                    <div class="subsection-title">Respuestas de error</div>
                    <div class="error-list">
                        <div class="error-item">
                            <span class="error-code">400</span>
                            <code>{"success": false, "error": "Se requieren nombre, correo y password"}</code>
                        </div>
                        <div class="error-item">
                            <span class="error-code">409</span>
                            <code>{"success": false, "error": "el correo ya está registrado"}</code>
                        </div>
                    </div>
                </div>

                <!-- SECCIÃ"N DE TESTING -->
                <div id="test-register" class="test-section">
                    <h4>🧪 Probar este endpoint</h4>
                    <div style="display: grid; gap: 10px;">
                        <div>
                            <label style="font-weight: 600; display: block; margin-bottom: 5px;">Nombre:</label>
                            <input type="text" class="test-input" name="nombre" placeholder="Juan Pérez" value="Usuario Prueba">
                        </div>
                        <div>
                            <label style="font-weight: 600; display: block; margin-bottom: 5px;">Correo:</label>
                            <input type="email" class="test-input" name="correo" placeholder="usuario@example.com" value="test@example.com">
                        </div>
                        <div>
                            <label style="font-weight: 600; display: block; margin-bottom: 5px;">Password:</label>
                            <input type="password" class="test-input" name="password" placeholder="123456" value="123456">
                        </div>
                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                            <div>
                                <label style="font-weight: 600; display: block; margin-bottom: 5px;">Latitud (opcional):</label>
                                <input type="number" step="any" class="test-input" name="latitud" placeholder="40.4168" value="40.4168">
                            </div>
                            <div>
                                <label style="font-weight: 600; display: block; margin-bottom: 5px;">Longitud (opcional):</label>
                                <input type="number" step="any" class="test-input" name="longitud" placeholder="-3.7038" value="-3.7038">
                            </div>
                        </div>
                    </div>
                    <button class="execute-button" onclick="testEndpoint('register', 'POST', '/api/register')">🚀 Ejecutar</button>
                    <div class="test-output"></div>
                </div>
            </div>

            <!-- POST /api/login -->
            <div class="endpoint">
                <div class="endpoint-header">
                    <span class="method method-post">POST</span>
                    <span class="endpoint-path">/api/login</span>
                    <span class="access-badge access-public">Público</span>
                    <button class="test-button" onclick="toggleTestSection('login')">🧪 Probar endpoint</button>
                </div>
                <div class="endpoint-description">
                    Autentica a un usuario existente. Genera un token de sesión y marca al usuario como activo.
                </div>

                <div class="subsection">
                    <div class="subsection-title">Parámetros de entrada</div>
                    <div class="code-block">
<pre>{
  "correo": "juan@example.com",
  "password": "123456",
  "latitud": 40.4168,  <span style="color: #75715e;">// opcional</span>
  "longitud": -3.7038  <span style="color: #75715e;">// opcional</span>
}</pre>
                    </div>
                </div>

                <div class="subsection">
                    <div class="subsection-title">Respuesta exitosa (200)</div>
                    <div class="code-block">
<pre>{
  "success": true,
  "token": "a3f5c2b1d9e8f7a6b5c4d3e2f1a0b9c8",
  "data": {
    "id": 1,
    "user": {
      "nombre": "Juan Pérez",
      "correo": "juan@example.com"
    }
  }
}</pre>
                    </div>
                </div>

                <div class="subsection">
                    <div class="subsection-title">Respuestas de error</div>
                    <div class="error-list">
                        <div class="error-item">
                            <span class="error-code">400</span>
                            <code>{"success": false, "error": "Se requieren correo y password"}</code>
                        </div>
                        <div class="error-item">
                            <span class="error-code">401</span>
                            <code>{"success": false, "error": "Credenciales inválidas"}</code>
                        </div>
                    </div>
                </div>

                <!-- SECCIÃ"N DE TESTING -->
                <div id="test-login" class="test-section">
                    <h4>🧪 Probar este endpoint</h4>
                    <div style="display: grid; gap: 10px;">
                        <div>
                            <label style="font-weight: 600; display: block; margin-bottom: 5px;">Correo:</label>
                            <input type="email" class="test-input" name="correo" placeholder="usuario@example.com" value="admin@test.com">
                        </div>
                        <div>
                            <label style="font-weight: 600; display: block; margin-bottom: 5px;">Password:</label>
                            <input type="password" class="test-input" name="password" placeholder="123456" value="admin1234">
                        </div>
                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                            <div>
                                <label style="font-weight: 600; display: block; margin-bottom: 5px;">Latitud (opcional):</label>
                                <input type="number" step="any" class="test-input" name="latitud" placeholder="40.4168">
                            </div>
                            <div>
                                <label style="font-weight: 600; display: block; margin-bottom: 5px;">Longitud (opcional):</label>
                                <input type="number" step="any" class="test-input" name="longitud" placeholder="-3.7038">
                            </div>
                        </div>
                    </div>
                    <button class="execute-button" onclick="testEndpoint('login', 'POST', '/api/login')">🚀 Ejecutar</button>
                    <div class="test-output"></div>
                </div>
            </div>

            <!-- POST /api/logout -->
            <div class="endpoint">
                <div class="endpoint-header">
                    <span class="method method-post">POST</span>
                    <span class="endpoint-path">/api/logout</span>
                    <span class="access-badge access-protected">Requiere Token</span>
                    <button class="test-button" onclick="toggleTestSection('logout')">🧪 Probar endpoint</button>
                </div>
                <div class="endpoint-description">
                    Cierra la sesión del usuario. Invalida el token, marca al usuario como inactivo y elimina sus salas privadas si no quedan otros usuarios activos.
                </div>

                <div class="subsection">
                    <div class="subsection-title">Parámetros de entrada</div>
                    <p style="color: #6c757d; font-style: italic;">No requiere parámetros. Solo el token en el header.</p>
                </div>

                <div class="subsection">
                    <div class="subsection-title">Respuesta exitosa (200)</div>
                    <div class="code-block">
<pre>{
  "success": true,
  "message": "Sesión cerrada correctamente",
  "salasPrivadasEliminadas": 2
}</pre>
                    </div>
                </div>

                <div class="subsection">
                    <div class="subsection-title">Respuestas de error</div>
                    <div class="error-list">
                        <div class="error-item">
                            <span class="error-code">401</span>
                            <code>{"success": false, "error": "No autenticado"}</code>
                        </div>
                    </div>
                </div>

                <!-- SECCIÓN DE TESTING -->
                <div id="test-logout" class="test-section">
                    <h4>🧪 Probar este endpoint</h4>
                    <p style="color: #666; margin-bottom: 10px;">Este endpoint no requiere parámetros, solo el token de autenticación.</p>
                    <button class="execute-button" onclick="testEndpoint('logout', 'POST', '/api/logout')">🚀 Ejecutar</button>
                    <div class="test-output"></div>
                </div>
            </div>
        </section>

        <!-- SECCIÃ“N: USUARIOS -->
        <section id="usuarios" class="section">
            <h2 class="section-title">Gestión de Usuarios</h2>

            <!-- GET /api/perfil -->
            <div class="endpoint">
                <div class="endpoint-header">
                    <span class="method method-get">GET</span>
                    <span class="endpoint-path">/api/perfil</span>
                    <span class="access-badge access-protected">ðŸ”’ Requiere Token</span>
                </div>
                <div class="endpoint-description">
                    Obtiene la información completa del usuario autenticado, incluyendo ubicación y estado.
                </div>

                <div class="subsection">
                    <div class="subsection-title">Parámetros de entrada</div>
                    <p style="color: #6c757d; font-style: italic;">No requiere parámetros.</p>
                </div>

                <div class="subsection">
                    <div class="subsection-title">Respuesta exitosa (200)</div>
                    <div class="code-block">
<pre>{
  "success": true,
  "data": {
    "token": 1,
    "user": {
      "id": 1,
      "nombre": "Juan Pérez",
      "correo": "juan@example.com",
      "estado": true,
      "latitud": 40.4168,
      "longitud": -3.7038
    }
  }
}</pre>
                    </div>
                </div>

                <div class="subsection">
                    <div class="subsection-title">Respuestas de error</div>
                    <div class="error-list">
                        <div class="error-item">
                            <span class="error-code">401</span>
                            <code>{"success": false, "error": "No autenticado"}</code>
                        </div>
                        <div class="error-item">
                            <span class="error-code">403</span>
                            <code>{"success": false, "error": "Usuario inactivo"}</code>
                        </div>
                    </div>
                </div>
            </div>

            <!-- POST /api/actualizar -->
            <div class="endpoint">
                <div class="endpoint-header">
                    <span class="method method-post">POST</span>
                    <span class="endpoint-path">/api/actualizar</span>
                    <span class="access-badge access-protected">ðŸ”’ Requiere Token</span>`n                    <button class="test-button" onclick="toggleTestSection('actualizar')">🧪 Probar endpoint</button>
                </div>
                <div class="endpoint-description">
                    Actualiza las coordenadas GPS del usuario autenticado.
                </div>

                <div class="subsection">
                    <div class="subsection-title">Parámetros de entrada</div>
                    <div class="code-block">
<pre>{
  "latitud": 40.4168,
