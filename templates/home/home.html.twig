    <script>
        const token = localStorage.getItem('auth_token');
        // Construir baseUrl de manera m√°s robusta
        const baseUrl = window.location.origin + window.location.pathname.replace(/\/[^\/]*$/, '');
        let currentUser = null;
        let usuariosConectadosAntes = []; // Para rastrear usuarios que se desconectan
        let ultimoMensajeId = 0; // Para cargar solo mensajes nuevos
        let mensajesMostrados = new Set(); // Para evitar duplicados

        console.log('Token:', token ? token.substring(0, 20) + '...' : 'NO HAY TOKEN');
        console.log('Base URL:', baseUrl);

        // Cargar datos del usuario al iniciar
        async function loadUserData() {
            if (!token) {
                window.location.href = baseUrl + '/login';
                return;
            }

            try {
                const response = await fetch(baseUrl + '/api/perfil', {
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                if (response.ok) {
                    const data = await response.json();
                    currentUser = data.data?.user;
                    displayUserData(currentUser);

                    // Verificar si necesita actualizar ubicaci√≥n
                    if (!currentUser.latitud || !currentUser.longitud) {
                        await solicitarYActualizarUbicacion();
                    }
                } else {
                    // Token inv√°lido, redirigir al login
                    localStorage.removeItem('auth_token');
                    localStorage.removeItem('user');
                    window.location.href = baseUrl + '/login';
                }
            } catch (error) {
                console.error('Error al cargar datos del usuario:', error);
                showMessage('Error al cargar datos del usuario', 'error');
            }
        }

        function displayUserData(user) {
            document.getElementById('user-name').textContent = user.nombre;
            document.getElementById('user-email').textContent = user.correo;
            document.getElementById('welcome-title').textContent = `üëã ¬°Bienvenido, ${user.nombre}!`;
            document.getElementById('info-correo').textContent = user.correo;
            document.getElementById('info-id').textContent = user.id;
            document.getElementById('info-estado').textContent = user.estado ? 'Activo' : 'Inactivo';
            document.title = `Inicio - ${user.nombre}`;
        }

        async function logout() {
            try {
                const response = await fetch(baseUrl + '/api/logout', {
                    method: 'POST',
                    headers: {
                        'Authorization': `Bearer ${token}`,
                        'Content-Type': 'application/json'
                    }
                });

                const data = await response.json();

                if (response.ok) {
                    localStorage.removeItem('auth_token');
                    localStorage.removeItem('user');
                    showMessage('Sesi√≥n cerrada correctamente', 'success');
                    setTimeout(() => {
                        window.location.href = baseUrl + '/login';
                    }, 1000);
                } else {
                    showMessage('Error al cerrar sesi√≥n: ' + data.error, 'error');
                }
            } catch (error) {
                showMessage('Error de conexi√≥n', 'error');
            }
        }

        function showMessage(message, type) {
            const container = document.getElementById('message-container');
            const alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
            container.innerHTML = `<div class="alert ${alertClass} alert-dismissible fade show" role="alert">
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>`;

            setTimeout(() => {
                container.innerHTML = '';
            }, 5000);
        }

        async function cargarUsuariosCercanos() {
            const container = document.getElementById('usuarios-cercanos-container');
            container.innerHTML = '<div class="text-center py-3"><div class="spinner-border"></div></div>';

            try {
                const response = await fetch(baseUrl + '/api/home', {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                const data = await response.json();

                if (response.ok && data.success) {
                    const usuariosCercanos = data.data?.usuariosCercanos || [];
                    if (usuariosCercanos.length === 0) {
                        container.innerHTML = '<div class="alert alert-info">üìç No hay usuarios activos a menos de 5 km</div>';
                    } else {
                        let html = '<div class="row g-3">';
                        usuariosCercanos.forEach(u => {
                            html += `
                                <div class="col-md-6 col-lg-4">
                                    <div class="card border-0 shadow-sm">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center mb-2">
                                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width:50px;height:50px;font-size:24px">
                                                    ${u.nombre.charAt(0).toUpperCase()}
                                                </div>
                                                <div>
                                                    <h5 class="mb-0 fw-bold">${u.nombre}</h5>
                                                    <small class="text-muted">${u.correo}</small>
                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-between mt-3">
                                                <span class="badge bg-success">‚úì Activo</span>
                                                <span class="badge bg-primary">üìç ${u.distancia} km</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            `;
                        });
                        html += `</div><div class="alert alert-success mt-3 mb-0">‚úì ${data.data?.total || 0} usuario(s) cercano(s)</div>`;
                        container.innerHTML = html;
                    }
                } else {
                    container.innerHTML = `<div class="alert alert-warning">‚ö†Ô∏è ${data.error || 'Error al cargar usuarios'}</div>`;
                }
            } catch (error) {
                container.innerHTML = `<div class="alert alert-danger">‚ùå Error: ${error.message}</div>`;
            }
        }

        async function solicitarYActualizarUbicacion() {
            try {
                const ubicacion = await obtenerUbicacion();

                // Actualizar en el servidor
                const response = await fetch(baseUrl + '/api/actualizar', {
                    method: 'POST',
                    headers: {
                        'Authorization': `Bearer ${token}`,
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        latitud: ubicacion.latitude,
                        longitud: ubicacion.longitude
                    })
                });

                const data = await response.json();

                if (response.ok) {
                    showMessage('‚úì Ubicaci√≥n actualizada correctamente', 'success');
                    // Actualizar usuario actual
                    currentUser.latitud = data.latitud;
                    currentUser.longitud = data.longitud;
                    // Cargar usuarios cercanos ahora que tenemos ubicaci√≥n
                    cargarUsuariosCercanos();
                } else {
                    showMessage('‚ö†Ô∏è ' + (data.error || 'Error al actualizar ubicaci√≥n'), 'error');
                }
            } catch (error) {
                console.warn('No se pudo obtener/actualizar ubicaci√≥n:', error);
                showMessage('‚ö†Ô∏è No se pudo obtener tu ubicaci√≥n. Los usuarios cercanos no estar√°n disponibles.', 'error');
            }
        }

        function obtenerUbicacion() {
            return new Promise((resolve, reject) => {
                if (!navigator.geolocation) {
                    reject(new Error('Geolocalizaci√≥n no soportada'));
                    return;
                }
                navigator.geolocation.getCurrentPosition(
                    (position) => resolve({
                        latitude: position.coords.latitude,
                        longitude: position.coords.longitude
                    }),
                    (error) => reject(error),
                    { enableHighAccuracy: true, timeout: 5000, maximumAge: 0 }
                );
            });
        }

        async function cargarUsuariosConectados() {
            try {
                const response = await fetch(baseUrl + '/api/usuarios', {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                const data = await response.json();

                if (response.ok && data.success) {
                    const lista = document.getElementById('usuarios-conectados-lista');
                    const count = document.getElementById('usuarios-conectados-count');
                    const usuarios = data.data?.usuarios || [];

                    count.textContent = data.data?.total || 0;

                    if (usuarios.length === 0) {
                        lista.textContent = 'Solo t√∫ est√°s conectado';
                    } else {
                        // Mostrar solo los primeros 5 nombres
                        const nombres = usuarios.slice(0, 5).map(u => u.nombre);
                        let texto = nombres.join(', ');

                        if (usuarios.length > 5) {
                            texto += ` y ${usuarios.length - 5} m√°s`;
                        }

                        lista.textContent = texto;
                    }
                } else {
                    document.getElementById('usuarios-conectados-lista').textContent = 'Error al cargar';
                    document.getElementById('usuarios-conectados-count').textContent = '0';
                }
            } catch (error) {
                console.error('Error al cargar usuarios conectados:', error);
            }
        }

        async function cargarMensajesGenerales() {
            const container = document.getElementById('chat-mensajes-container');

            // Solo mostrar spinner en la primera carga
            if (ultimoMensajeId === 0) {
                container.innerHTML = '<div class="text-center py-3"><div class="spinner-border"></div></div>';
            }

            try {
                // Primero cargar usuarios conectados
                const usuariosResponse = await fetch(baseUrl + '/api/usuarios', {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                const usuariosData = await usuariosResponse.json();
                let usuarios = [];

                // Detectar usuarios que se desconectaron
                if (usuariosResponse.ok && usuariosData.success) {
                    usuarios = usuariosData.data?.usuarios || [];
                    const idsActuales = usuarios.map(u => u.id);
                    const idsAnteriores = usuariosConectadosAntes.map(u => u.id);

                    // Encontrar usuarios que se desconectaron
                    const desconectados = usuariosConectadosAntes.filter(u => !idsActuales.includes(u.id));

                    // Mostrar mensaje de desconexi√≥n
                    desconectados.forEach(usuario => {
                        const mensajeDesconexion = `
                            <div class="text-center mb-2">
                                <div class="d-inline-block bg-danger bg-opacity-10 text-danger rounded p-2 small">
                                    <span class="badge bg-danger me-2">‚óè</span>
                                    El usuario <strong>${usuario.nombre}</strong> se ha desconectado
                                </div>
                            </div>
                        `;
                        if (ultimoMensajeId > 0) { // Solo si ya hay mensajes cargados
                            container.insertAdjacentHTML('beforeend', mensajeDesconexion);
                        }
                    });

                    // Encontrar usuarios que se conectaron
                    const conectados = usuarios.filter(u => !idsAnteriores.includes(u.id));

                    // Mostrar mensaje de conexi√≥n
                    conectados.forEach(usuario => {
                        const mensajeConexion = `
                            <div class="text-center mb-2">
                                <div class="d-inline-block bg-success bg-opacity-10 text-success rounded p-2 small">
                                    <span class="badge bg-success me-2">‚óè</span>
                                    El usuario <strong>${usuario.nombre}</strong> est√° en l√≠nea
                                </div>
                            </div>
                        `;
                        if (ultimoMensajeId > 0) { // Solo si ya hay mensajes cargados
                            container.insertAdjacentHTML('beforeend', mensajeConexion);
                        }
                    });

                    // Actualizar lista de usuarios anteriores
                    usuariosConectadosAntes = usuarios;
                }

                // Luego cargar mensajes
                const response = await fetch(baseUrl + '/api/general', {
                    headers: { 'Authorization': `Bearer ${token}` }
                });

                // Verificar si la respuesta es JSON
                const contentType = response.headers.get('content-type');
                if (!contentType || !contentType.includes('application/json')) {
                    throw new Error('Respuesta no v√°lida del servidor');
                }

                const data = await response.json();

                if (response.ok && data.success) {
                    const mensajes = data.data?.mensajes || [];
                    // Si es la primera carga, limpiar el spinner
                    if (ultimoMensajeId === 0) {
                        container.innerHTML = '';

                        // Mostrar usuarios actualmente conectados solo en la primera carga
                        if (usuariosResponse.ok && usuariosData.success && usuarios.length > 0) {
                            const usuariosConectados = usuarios.slice(0, 3);
                            usuariosConectados.forEach(usuario => {
                                const html = `
                                    <div class="text-center mb-2">
                                        <div class="d-inline-block bg-success bg-opacity-10 text-success rounded p-2 small">
                                            <span class="badge bg-success me-2">‚óè</span>
                                            El usuario <strong>${usuario.nombre}</strong> est√° en l√≠nea
                                        </div>
                                    </div>
                                `;
                                container.insertAdjacentHTML('beforeend', html);
                            });
                            if (usuarios.length > 3) {
                                const html = `
                                    <div class="text-center mb-3">
                                        <small class="text-muted">y ${usuarios.length - 3} usuario(s) m√°s conectado(s)</small>
                                    </div>
                                `;
                                container.insertAdjacentHTML('beforeend', html);
                            }
                        }
                    }

                    if (mensajes.length === 0 && ultimoMensajeId === 0) {
                        container.insertAdjacentHTML('beforeend', '<div class="alert alert-info mb-0 text-center">üí¨ No hay mensajes a√∫n. ¬°S√© el primero en escribir!</div>');
                    } else {
                        // Solo agregar mensajes nuevos
                        mensajes.forEach(msg => {
                            if (!mensajesMostrados.has(msg.id)) {
                                mensajesMostrados.add(msg.id);
                                const esMio = msg.autor.id === currentUser.id;
                                const alignClass = esMio ? 'text-end' : 'text-start';
                                const bgClass = esMio ? 'bg-primary text-white' : 'bg-white';

                                const html = `
                                    <div class="${alignClass} mb-3">
                                        <div class="d-inline-block ${bgClass} rounded p-2 shadow-sm" style="max-width: 70%;">
                                            <div class="fw-bold small">${msg.autor.nombre}</div>
                                            <div>${msg.contenido}</div>
                                            <div class="small opacity-75">${new Date(msg.fechaCreacion).toLocaleString()}</div>
                                        </div>
                                    </div>
                                `;
                                container.insertAdjacentHTML('beforeend', html);

                                // Actualizar el √∫ltimo mensaje ID
                                if (msg.id > ultimoMensajeId) {
                                    ultimoMensajeId = msg.id;
                                }
                            }
                        });
                    }

                    // Scroll al final solo si hay contenido nuevo
                    container.scrollTop = container.scrollHeight;
                } else {
                    const errorMsg = data.error || 'Error al cargar mensajes';
                    if (errorMsg.includes('no autenticado')) {
