{
  "info": {
    "name": "Proyecto Usuarios - API Auth",
    "description": "Colección de endpoints para el sistema de autenticación",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"Juan Pérez\",\n  \"correo\": \"juan@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/register",
          "host": ["{{base_url}}"],
          "path": ["api", "register"]
        },
        "description": "Registra un nuevo usuario en el sistema"
      },
      "response": []
    },
    {
      "name": "2. Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Guardar token automáticamente",
              "if (pm.response.code === 200) {",
              "    const response = pm.response.json();",
              "    if (response.token) {",
              "        pm.collectionVariables.set('token', response.token);",
              "        console.log('Token guardado:', response.token);",
              "    }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"correo\": \"juan@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/login",
          "host": ["{{base_url}}"],
          "path": ["api", "login"]
        },
        "description": "Inicia sesión y obtiene un token de autenticación"
      },
      "response": []
    },
    {
      "name": "3. Get Perfil",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/perfil",
          "host": ["{{base_url}}"],
          "path": ["api", "perfil"]
        },
        "description": "Obtiene los datos del perfil del usuario autenticado"
      },
      "response": []
    },
    {
      "name": "4. Logout",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/logout",
          "host": ["{{base_url}}"],
          "path": ["api", "logout"]
        },
        "description": "Cierra la sesión del usuario actual"
      },
      "response": []
    }
  ]
}
